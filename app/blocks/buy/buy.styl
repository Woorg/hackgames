.buy
	display block
	overflow hidden
	&__in
		@extends .in
		padding-top 104px
		padding-bottom 113px
		+r($t)
			padding-top 52px
			padding-bottom 56px
	&__title
		@extends .title
		margin-bottom 20px
		color #353535
		text-align center
	&__carousel
		padding-left 82px
		padding-right 82px
		+r($t)
			padding 0
			padding-right 0
	&__list
		margin-left -50px
		font-size 0
		+r($t)
			margin-left 0
		&:hover
			.slick-arrow
				display block
		.slick-arrow
			position absolute
			z-index 2
			top 50%
			padding-top 9px
			padding-right 10px
			padding-bottom 9px
			padding-left 14px
			display block
			width 38px
			height 42px
			background-color #4597c8
			background-image linear-gradient(to right, #1077b6 0%, #117ab9 100%)
			// opacity 0.78
			text-indent -9999px
			tr(all .3s ease)
			transform translateY(calc(-50% - 70px))
			&:after
				position absolute
				top 50%
				left 50%
				content ""
				transform translate(-50%, -50%)
			&:hover
				background-color darken(#4597c8, 10)
				background-image linear-gradient(to right, darken(#1077b6, 10) 0%, darken(#117ab9, 10) 100%)

		.slick-prev
			left -30px
			+r($t)
				left 30px
			&:after
				retinaSprite($arrow_right_group)
				transform translate(-50%, -50%) rotate(180deg)

		.slick-next
			right -40px
			+r($t)
				right 28px
			&:after
				retinaSprite($arrow_right_group)
	&__item
		padding-top 30px
		padding-right 34px
		padding-left 34px
		width 300px
		display inline-block
		+r($t)
			padding-left 0
			padding-right 0
		&:last-child
			.buy__link
				padding-right 0
	&__link
		// padding-right 60px
		margin auto
		width 226px
		display block
	&__image
		position relative
		margin-bottom 26px
		width 226px
		height 226px
		background-color rgba(24, 130, 198, 0.69)
		box-shadow 5px 2px 29px rgba(0, 0, 0, 0.3)
		img
			position absolute
			top 50%
			left 50%
			max-width 100%
			height auto
			transform translate(-50%, -50%)
	&__bottom
		font-size 0
		white-space nowrap
	&__bottom-col
		position relative
		display inline-block
		vertical-align top
	&__price,
	&__item-title
		display inline-block
		vertical-align middle
		line-height 1
	&__price
		position relative
		margin-right 10px
		padding 5px 20px 5px 5px
		background-color #1882c6
		font-family $rM
		font-size 20px
		color #FFF
		&:after
			position absolute
			top 50%
			right 5px
			margin-top -7px
			retinaSprite($rub_small_group)
			content ""
	&__price-old
		position absolute
		top -18px
		left -10px
		right 5px
		padding-right 5px
		font-family $rM
		font-size 18px
		line-height 18px
		color #0e72b1
		line-height 1
		text-align center
		&:after
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			width 100%
			height 100%
			background url('../images/general/old.png') 50% 0 no-repeat

			content ""
	&__item-title
		margin-bottom 9px
		max-width 170px
		font-family $rB
		font-size 18px
		color #020515
		white-space normal
		text-transform uppercase
	&__time
		font-family $rL
		font-size 18px
		line-height 1
		color #020515

