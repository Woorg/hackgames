.why
	display block
	background-image linear-gradient(to right, #0b0b0b 0%, #575757 47%, #0b0b0b 100%)
	background #202020 url('../images/general/advantages.jpg') 50% 0 no-repeat
	background-size cover
	box-shadow -11px 37px 62px rgba(0, 0, 0, 0.25)
	&__in
		@extends .in
		padding-top 82px
		padding-right 0
		padding-bottom 25px
		+r($t)
			padding-top 41px
	&__title
		@extends .title
		margin-bottom 54px
		color #FFF
		text-align center
	&__list-w
		overflow hidden
	&__list
		margin-right -(ratio-percentage(40, 1344))
		padding-left 7px
		font-size 0
		+r($t)
			margin-right 0
	&__item
		margin-right 40px
		margin-right ratio-percentage(40, 1344)
		margin-bottom 64px
		// width 400px
		width ratio-percentage(400, 1344)
		display inline-block
		vertical-align top
		color #FFF
		+r($l)
			width 47%
		+r($t)
			margin-right 0
			width 100%


	&__item_1
		.why__item-title
			&:before
				retinaSprite($why_icon_1_group)
	&__item_2
		.why__item-title
			padding-left 40px
			&:before
				retinaSprite($why_icon_2_group)
	&__item_3
		.why__item-title
			&:before
				retinaSprite($why_icon_3_group)
	&__item_4
		.why__item-title
			&:before
				retinaSprite($why_icon_4_group)
	&__item_5
		.why__item-title
			&:before
				retinaSprite($why_icon_5_group)
	&__item_6
		.why__item-title
			padding-left 60px

			&:before
				retinaSprite($why_icon_6_group)
	&__item-title
		position relative
		margin-bottom 23px
		padding-left 50px
		font-family $rB
		font-size 20px
		line-height 1.2
		text-transform uppercase
		&:before
			position absolute
			top 50%
			left 0
			content ""
			transform translateY(-50%)
	&__item-text
		font-size 18px
		line-height 1.11111111111111

