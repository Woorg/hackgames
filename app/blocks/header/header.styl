.header
	display block
	&__in
		@extends .in
	&__top
		position relative
		height 100vh
		overflow hidden
	&__video
		position absolute
	&__controls
		position absolute
		z-index 1
		top 57px
		right 110px
		font-size 0
		+r($l)
			top 30px
			right 20px
	&__controls-link
		margin-left 15px
		padding-top 8px
		padding-right 14px
		padding-bottom 8px
		padding-left 15px
		display inline-block
		vertical-align middle
		font-family $rB
		font-size 18px
		color #FFF
		line-height 1
		text-decoration none
		text-transform uppercase
		letter-spacing tracking(10, 18)
		box-shadow inset -6px -10px 29px 3px rgba(0, 0, 0, 0.05)
		background-image linear-gradient(to right, #0283c3 0%, #0a73b7 100%)
		border-radius 5px
		opacity 1
		tr(all .3s ease)
		&:hover
			opacity 0.8
			background-image linear-gradient(to right, darken(#0283c3, 10) 0%, darken(#0a73b7, 10) 100%)
		&:first-child
			margin-left 0
	&__logo
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
	&__button-down
		position absolute
		bottom -39px
		left 50%
		border none
		width 113px
		height 113px
		background #FFF
		background rgba(255,255,255, 1)
		border-radius 50%
		transform translateX(-50%)
		opacity 0.72
		hide-text()
		tr(opacity .3s ease)
		+r($t)
			bottom -14px
			width 70px
			height 70px
		&:after
			position absolute
			top 50%
			left 50%
			retinaSprite($arrow_down_group)
			content ""
			transform translate(-50%, calc(-50% - 5px))
			animation-duration 1s
			animation-iteration-count infinite
			animation-name scrollDown
		&:hover
			opacity 1
	&__bottom
		position relative
		z-index 2
		padding-top 18px
		padding-left 10px
		padding-right 10px
		padding-bottom 16px
		background-image linear-gradient(86deg, #54b0de 0%, #0b79c0 100%)
		font-size 0
		box-shadow 0px 10px 21px rgba(0,0,0,.31)
		clr()
	&__bottom_fixed
		position fixed
		z-index 10
		top 0
		left 0
		width 100%
	&__logo-sec,
	&__nav,
	&__right
		display inline-block
		vertical-align middle
		line-height 1
	&__logo-sec
		margin-right 78px
		margin-left -242px
		color #FFF
		font-family $pBI
		font-size 34px
		text-transform uppercase
		text-decoration none
		tr(all .3s ease)
		+r(1344px)
			// margin-left 0
			// margin-right 0
			display none
		&:hover
			color darken(#FFF, 10)
			text-decoration none

	&__nav
		margin-right 0
		margin-left 0
		+r(538px)
			display block
	&__right
		float right
		font-size 0
	&__user,
	&__cart
		display inline-block
		vertical-align middle
	&__user
		margin-right 30px
		+r($m)
			margin-right 10px
	&__cart
		position relative
		top 2px
		padding-left 30px
		&:after
			position absolute
			top 50%
			left 0
			margin-top -10px
			retinaSprite($basket_icon_group)
			content ""

	&__cart-val,
	&__cart-rub
		display inline-block
		vertical-align baseline
		font-family $rM
		font-size 26px
		color #FFF
		+r($t)
			vertical-align top
			font-size 20px
	&__cart-rub
		position relative
		bottom -1px
		margin-left 2px
		retinaSprite($rub_group)
		hide-text()

.logo
	retinaSprite($logo_group)
	hide-text()
	opacity 1
	tr(opacity .3s ease)
	+r($l)
		max-width 466px
		background url('../images/general/logo.png') 50% no-repeat
		background-size cover
	+r(466px)
		width 100%
		max-width 100%
		height auto
		min-height 40px
		background-size contain

	&:hover
		opacity 0.8


@keyframes fade
	from
		opacity 0

	to
		opacity 1

@keyframes scrollDown
	0%
		opacity 1
		transform translate(-50%, calc(-50% + 0))
	100%
		opacity 0
		transform translate(-50%, calc(-50% + 5px))

