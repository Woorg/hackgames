@keyframes scrollDown
	0%
		bottom -39px
		transform translate(-50%, calc(-50% + 65px))
	50%
		bottom -39px
		transform translate(-50%, calc(-50% + 55px))
	100%
		bottom -39px
		transformtranslate(-50%, calc(-50% + 65px))


