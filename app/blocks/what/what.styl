.what
	position relative
	z-index 1
	background #FFF url('../images/general/what-bg.png') 50% 50% no-repeat
	background-size cover
	overflow hidden
	&:before
		position absolute
		z-index 0
		top -62px
		width 100%
		height 62px
		box-shadow 0 37px 62px rgba(0, 0, 0, 0.25)
		content ""
	&__in
		@extends .in
		padding-top 130px
		padding-bottom 141px
		+r($t)
			padding-top 65px
			padding-bottom 70px
	&__image
		position relative
		margin-right 50px
		width 442px
		width ratio-percentage(442, 1344)
		height 324px
		// height ratio-percentage(324,1344)
		background-color #1079b8
		+r($l)
			height 236px
		+r($t)
			margin-right 0
			margin-bottom 80px
			width auto
			height 354px
		+r($m)
			height 314px
		img
			position absolute
			top 16px
			left 21px
			display block
			max-width 100%
			height auto
	&__image-caption
		position absolute
		right -141px
		bottom -49px
		padding-top 19px
		padding-right 14px
		padding-bottom 24px
		padding-left 20px
		width 332px
		font-size 18px
		background-color #ffffff
		color #232323
		box-shadow 7px 7px 32px rgba(0, 0, 0, 0.34)
		strong,
		span
			font-family $rBld
			color #232323
		+r($t)
			right 20px
		+r($m)
			right 0
			width auto
	&__image,
	&__w
		display inline-block
		vertical-align top
		+r($t)
			display block
	&__w
		width 714px
		width ratio-percentage(714, 1344)
		+r($t)
			width auto
	&__title
		margin-bottom 24px
		@extends .title
		color #1079b8
		span
			color #353535
	&__text
		font-size 18px
		color #0d0d0d
